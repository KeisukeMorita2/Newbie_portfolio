<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="user-form">
      <div class="text-center">
        <h2>ユーザー情報変更</h2>
      </div>
        <div class="col-sm-8 offset-sm-2">

          <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>

            <div class="form-group">
              <%= f.label :name, '名前' %>
              <%= f.text_field :name, class: 'form-control', placeholder: "名前を入力してください（１０字以内）" %>
            </div>

            <div class="form-group">
              <%= f.label :email, 'Eメール' %>
              <%= f.email_field :email, class: 'form-control', placeholder: "＠を入れてアドレスを入力してください" %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'パスワード' %>
              <%= f.password_field :password, class: 'form-control', placeholder: "1文字以上入力してください" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, 'パスワード確認用' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "上記のパスワードを再入力してください" %>
            </div>

            <div class="form-group">
              <%= f.label :avatar, '画像' %>
              <%= f.file_field :avatar, class: 'form-control' %>
            </div>
            <% unless current_user.email == "guest@example.com" %>
            <%= f.submit '登録', class: 'btn btn-success btn-block' %>
            <% else %>
            <button type="button" class="btn btn-destroy btn-block" disabled>テストユーザは変更できません</button>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
