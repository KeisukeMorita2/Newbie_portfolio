<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="user-form">
      <div class="text-center">
        <h1>ログイン</h1>
      </div>
      <div class="col-sm-8 offset-sm-2">
        <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>

          <div class="form-group">
            <%= f.label :email, 'Eメール' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.submit 'ログイン', class: 'btn btn-info btn-block' %>
        <% end %>
        <%= form_for(:session, url:sessions_path) do |f| %>
        <%= f.hidden_field :email, value: "guest@example.com" %>
        <%= f.hidden_field :password, value: "password" %>
        <%= f.submit "ゲストログイン", class:"btn btn-info btn-block mt-3"%>
        <% end %>

        <%= link_to '新規登録はこちら', new_user_path %>
      </div>
    </div>
  </div>
</div>
